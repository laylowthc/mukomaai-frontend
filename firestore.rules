/**
 * @file Firebase Security Rules for MukomaAI
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data (users, chats, messages)
 * and provides public read access to AI persona definitions.
 *
 * Data Structure:
 * - /users/{userId}: User profiles, accessible only to the user themselves.
 * - /users/{userId}/chats/{chatId}: Chat sessions, accessible only to the owning user.
 * - /users/{userId}/chats/{chatId}/messages/{messageId}: Messages within a chat, accessible only to the owning user.
 * - /personas/{personaId}: AI persona definitions, publicly readable.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Public read access is granted to persona definitions.
 * - Data validation is limited to authorization-critical fields to allow for rapid prototyping.
 * - List operations are restricted to owners for user-scoped data.
 *
 * Denormalization for Authorization:
 * - Chat and Message documents do not need explicit ownership fields because ownership is enforced via path-based rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with matching user ID can create their profile.
     * @allow (get, list, update, delete) - Authenticated user with matching user ID can read, update, and delete their profile.
     * @deny (create) - Authenticated user attempts to create a profile with a mismatched user ID.
     * @deny (update, delete) - Authenticated user attempts to update or delete a profile with a mismatched user ID, or if the profile doesn't exist.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to chat sessions for a specific user.
     * @path /users/{userId}/chats/{chatId}
     * @allow (create) - Authenticated user with matching user ID can create a chat session under their profile.
     * @allow (get, list, update, delete) - Authenticated user with matching user ID can read, update, and delete their chat sessions.
     * @deny (create) - Authenticated user attempts to create a chat session with a mismatched user ID.
     * @deny (update, delete) - Authenticated user attempts to update or delete a chat session with a mismatched user ID, or if the chat doesn't exist.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/chats/{chatId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to messages within a specific chat session.
     * @path /users/{userId}/chats/{chatId}/messages/{messageId}
     * @allow (create) - Authenticated user with matching user ID can create a message within their chat session.
     * @allow (get, list, update, delete) - Authenticated user with matching user ID can read, update, and delete messages within their chat sessions.
     * @deny (create) - Authenticated user attempts to create a message with a mismatched user ID.
     * @deny (update, delete) - Authenticated user attempts to update or delete a message with a mismatched user ID, or if the message doesn't exist.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/chats/{chatId}/messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to AI persona definitions.
     * @path /personas/{personaId}
     * @allow (get, list) - Any user can read AI persona definitions.
     * @deny (create, update, delete) - No user can create, update, or delete AI persona definitions.
     * @principle Grants public read access to persona definitions while restricting write access.
     */
    match /personas/{personaId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}